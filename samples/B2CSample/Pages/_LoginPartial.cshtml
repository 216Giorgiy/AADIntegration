@using Microsoft.AspNetCore.B2CIntegration
@using Microsoft.Extensions.Options
@inject IOptionsMonitor<AzureAdB2COptions> AzureAdB2COptions

@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        @if (!string.IsNullOrEmpty(AzureAdB2COptions.Get(ViewBag.Scheme).EditProfilePolicyId))
        {
            <li><a asp-area="" asp-controller="Account" asp-action="EditProfile" asp-route-scheme="@ViewBag.Scheme">Hello @User.Identity.Name!</a></li>
        }
        else
        {
            <li class="navbar-text">Hello @User.Identity.Name!</li>
        }
        <li><a asp-area="" asp-controller="Account" asp-action="SignOut" asp-route-scheme="@ViewBag.Scheme">Sign out</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Signin" asp-route-scheme="@ViewBag.Scheme">Sign in</a></li>
    </ul>
}
